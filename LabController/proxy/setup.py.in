    name = "bkr.labcontroller",
    version = "@VERSION@",

    packages=find_packages('src'),
    package_dir = {'':'src'},

    namespace_packages = ['bkr'],

    data_files = [('/etc/beaker/', ['labcontroller.conf']),
                  ('/etc/beaker/power-scripts/', []),
                  ('/etc/init.d', ['init.d/beaker-proxy',
