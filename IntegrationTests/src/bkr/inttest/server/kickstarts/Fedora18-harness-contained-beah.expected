    # Older curl versions lack --retry
    if curl --help 2>&1 | grep -q .*--retry ; then
        function fetch() {
            curl --retry 20 --remote-time -o "$1" "$2"
        }
    else
        function fetch() {
            curl --remote-time -o "$1" "$2"
        }
    fi
